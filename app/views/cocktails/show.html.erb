<h1><%= @cocktail.name %></h1>

<ul class="list">
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> -
      <%= dose.description %>
      <%= link_to "Delete", dose_path(dose), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail) %>